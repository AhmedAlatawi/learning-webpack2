{
  "name": "webpack2-demo",
  "version": "1.0.0",
  "description": "Demonstrations of Webpack2",
  "private": true,
  "scripts": {
    "server": "nodemon server/server.js",
    "s1": "webpack --config=step-01-hello-webpack/webpack.config.js",
    "s1:watch": "webpack --config=step-01-hello-webpack/webpack.config.js --watch --progress",
    "clean:s1": "rimraf step-01-hello-webpack/dist",
    "s2": "webpack --config=step-02-with-webpack/webpack.config.js --watch --progress",
    "s2:prod": "webpack -p --config=step-02-with-webpack/webpack.config.js",
    "clean:s2": "rimraf step-02-with-webpack/dist",
    "s3": "webpack --config=step-03-loaders/webpack.config.js --watch --progress",
    "s3:prod": "webpack -p --config=step-03-loaders/webpack.config.js",
    "clean:s3": "rimraf step-03-loaders/dist",
    "s4": "webpack-dev-server --config=step-04-dev-server/webpack.config.js --inline --watch --progress",
    "s5": "webpack-dev-server --config=step-05-plugins/webpack.config.js --inline --watch --progress",
    "s5:prod": "webpack-dev-server -p --config=step-05-plugins/webpack.config.js --inline --watch --progress"
  },
  "author": "Vijay Dharap (@dharapvj)",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.22.0",
    "chalk": "^1.1.3",
    "chance": "^1.0.4",
    "css-loader": "^0.26.1",
    "eslint": "^3.14.1",
    "file-loader": "^0.10.0",
    "html-loader": "^0.4.5",
    "html-webpack-plugin": "^2.28.0",
    "json-server": "^0.9.4",
    "morgan": "^1.7.0",
    "node-sass": "^4.5.0",
    "nodemon": "^1.11.0",
    "normalize.css": "^5.0.0",
    "rimraf": "^2.5.4",
    "sass-loader": "^6.0.2",
    "style-loader": "^0.13.1",
    "ts-loader": "^2.0.0",
    "typescript": "^2.1.5",
    "url-loader": "^0.5.7",
    "webpack": "^2.2.0",
    "webpack-dev-server": "^2.4.1",
    "webpack-merge": "^4.0.0"
  }
}
